{
  "name": "abook",
  "version": "0.1.2",
  "private": true,
  "author": "a5node",
  "description": "An Electron + Next.js 13+ application. This is an accounting book for income and salary payments. Accounting for employees and their rating in companies.",
  "main": "./apps/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=\"production\" electron .",
    "dev": "run-p dev:next dev:esbuild dev:electron",
    "dev:next": "cross-env NODE_ENV=\"development\" next dev frontend",
    "dev:esbuild": "cross-env NODE_ENV=\"development\" ts-node ./esbuild.ts",
    "dev:electron": "wait-on  ./apps/main.js http://localhost:3000/  && electronmon ./apps/main.js",
    "prebuild": "run-p lint:fix",
    "build": "rimraf apps && run-p prod:next && run-p prod:electron",
    "prod:next": "cross-env NODE_ENV=\"production\" next build frontend",
    "prod:electron": "cross-env NODE_ENV=\"production\" ts-node ./esbuild.ts",
    "prepackage": "npm run build",
    "package": "rimraf release && ts-node ./builder.ts",
    "lint": "run-p lint:frontend lint:backend lint:contracts",
    "lint:fix": "run-p lint:frontend:fix lint:backend:fix lint:contracts:fix",
    "lint:frontend": "next lint frontend",
    "lint:backend": "eslint ./backend/**/*.ts",
    "lint:contracts": "eslint ./contracts/**/*.ts",
    "lint:backend:fix": "eslint ./backend/**/*.ts --fix",
    "lint:contracts:fix": "eslint ./contracts/**/*.ts --fix",
    "lint:frontend:fix": "eslint ./frontend/**/*.{ts,tsx} --fix",
    "prisma": "npx prisma init",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "prisma:migrate:dev": "npx prisma migrate dev",
    "prisma:migrate:reset": "npx prisma migrate reset",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "prisma:migrate:resolve": "npx prisma migrate resolve",
    "prisma:db:pull": "npx prisma db pull",
    "prisma:db:push": "npx prisma db push",
    "prisma:db:seed": "npx prisma db seed",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/0.1.0",
    "postinstall": "electron-builder install-app-deps",
    "up:version": "npm version patch",
    "husky-init": "npx husky-init",
    "test": "jest",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.0",
    "@chakra-ui/next-js": "^2.1.5",
    "@chakra-ui/react": "^2.8.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@prisma/client": "^5.3.1",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "chart.js": "^4.3.3",
    "classnames": "^2.3.2",
    "clean-stack": "^5.2.0",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "firebase": "^10.1.0",
    "firebase-admin": "^11.10.1",
    "framer-motion": "^10.15.2",
    "immer": "^10.0.2",
    "jsonwebtoken": "^9.0.2",
    "next": "^13.5.3",
    "prisma": "^5.3.1",
    "prisma-error-enum": "^0.1.3",
    "react": "18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.45.4",
    "react-icons": "^4.11.0",
    "rimraf": "^5.0.1",
    "swr": "^2.2.1",
    "zod": "^3.22.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "@electron/rebuild": "^3.2.13",
    "@prisma/nextjs-monorepo-workaround-plugin": "^5.3.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-log": "^4.4.8",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^6.1.1",
    "electronmon": "^2.0.2",
    "esbuild": "^0.19.2",
    "eslint": "^8.49.0",
    "eslint-config-next": "^13.5.3",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-react-hooks": "^5.0.0-canary-7118f5dd7-20230705",
    "husky": "^8.0.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "electronmon": {
    "patterns": [
      "./apps/**/*",
      "./frontend/**/*",
      "!**/*.db",
      "!**/*.log"
    ]
  }
}
